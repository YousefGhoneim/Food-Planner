<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.onboard.view.OnBoardingActivity">

    <!-- ViewPager2 for onboarding screens -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager2"
        android:layout_width="415dp"
        android:layout_height="600dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- TabLayout for navigation indicators -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="76dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        app:tabIndicatorColor="@color/primary"
        app:tabSelectedTextColor="@color/black"
        app:tabTextColor="#645340"
        app:tabIndicatorHeight="4dp"
        app:tabIndicatorGravity="bottom"
        app:tabRippleColor="@color/surface"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewPager2"/>

    <!-- Skip Button with updated color and centered text -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="28dp"
        android:text="@string/skip"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        app:backgroundTint="@color/primary"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewPager2"/>

</androidx.constraintlayout.widget.ConstraintLayout>
